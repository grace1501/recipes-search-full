<h1>Ideas for your dinner:</h1>
<a href="/">Back to home</a>

<div>
  <% @recipes_list.each do |item| %>
  <details>
    <summary>
    <img src="<%= item.fetch(:meal_photo) %>" height="75rem">
    <%= item.fetch(:meal_name) %>
    </summary>
    
    <%= erb :_recipe_partial, :locals => {:meal_object => item} %>
  </details>
  
  <% end %>
</div>
